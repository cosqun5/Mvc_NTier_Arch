@using Entities.Concrate
@model Experience
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row g-4">
	<div class="col-sm-12 col-xl-6 mt-5" style="margin:20px;">
		<div class="bg-secondary rounded h-100 p-4">
			<h6 class="mb-4">Create</h6>
			<form asp-action="Create" asp-controller="Experience" asp-area="Admin" method="post" enctype="multipart/form-data">
				<div class="mb-3">
					<label asp-for="Name" class="form-label"></label>
					<input asp-for="Name" class="form-control">
					<span asp-validation-for="Name"></span>

				</div>
				<div class="mb-3">
					<label asp-for="Description" class="form-label"></label>
					<input asp-for="Description" class="form-control">
					<span asp-validation-for="Description"></span>

				</div>
				<div class="mb-3">
					<label asp-for="Start" class="form-label"></label>
					<input asp-for="Start" class="form-control">
					<span asp-validation-for="Start"></span>

				</div>
				<div class="mb-3">
					<label asp-for="End" class="form-label"></label>
					<input asp-for="End" class="form-control">
					<span asp-validation-for="End"></span>

				</div>


				<button type="submit" class="btn btn-primary">Create</button>
			</form>
		</div>
	</div>
</div>

