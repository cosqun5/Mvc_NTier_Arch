<body class="ajax-page-visible dark-arshia max-width-d">
    <div id="ajax-page" class="ajax-page-content">
        <div class="single-portfolio-wrapper">
            <div class="container">
                <!-- Ajax-page-nav Start -->
                <div class="ajax-page-nav">
                    <div class="nav-item ajax-page-prev-next">
                        @*<a class="ajax-page-load" href="portfolio-03-dark.html">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                        <a class="ajax-page-load" href="portfolio-02-dark.html">
                            <i class="bi bi-chevron-right"></i>
                        </a>*@
                    </div>
                    <div class="nav-item ajax-page-close-button">
                        <a class="ajax-page-close-button"asp-action="Index" asp-controller="Home">
                            <i class="bi bi-x"></i>
                        </a>
                    </div>
                </div>
                <!-- Ajax-page-nav End -->
                <!--  Single Portfolio Start  -->
                <div class="portfolio-page-title">
                   
                        
                    <h1>@Model.Name</h1>
                    
                </div>
                <div class="row">
                    <div class="col-lg-7 post-content">
                        <div class="single-post">
                            <div class="owl-carousel portfolio-page-carousel">
                                <!-- Item 01 -->
                                @foreach (var image in Model.PortfolioImages)
                                {
                                    <div class="entry-image">
                                        <img src="~/assets/img/@image.Path" style="width:100%;height:70% !important" alt="Portfolio Image">
                                    </div>
                                }
                               
                            </div>
                            
                        </div>
                    </div>
                    <aside class="col-lg-4 ms-auto sidebar mt-5 mt-lg-0">
                        <div class="sidbar-wrap">
                            <!-- Categories -->
                           
                                
                            <div class="aside-box">
                                <div class="aside-title">
                                    <h6>Project Details</h6>
                                </div>
                                <p>@Model.Description</p>
                                    <ul class="list-unstyled">
                                    <li>
                                        <a href="#">Category: </a>
                                        @if (Model.Category != null)
                                        {
                                            <span>@Model.Category.Name</span>
                                        }
                                        else
                                        {
                                            <span>No category</span>
                                        }
                                    </li>

                                    <li>
                                        <a href="#">Date:</a>
                                        @if (Model.CreatedDate.HasValue)
                                        {
                                            <span>@Model.CreatedDate.Value.ToString("dd.MM.yyyy ")</span>
                                        }
                                        else
                                        {
                                            <span>No date available</span>
                                        }
                                    </li>
                                        <li>
                                            <a href="#">Project Value:</a>
                                            <span>@Model.Price</span>
                                        </li>


                                    </ul>
                                </div>
                            
                            </div>
                        </div>
                    </aside>
                </div>
                <!--  Single Portfolio End  -->
            </div>
        </div>
    </div>

